<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!----======== CSS ======== -->
  <link rel="stylesheet" href="/stylesheets/list.css" />

  <!----===== Iconscout CSS ===== -->
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <title>All Contacts</title>
  <style>
    .delete-contact-btn {
      background-color: #d9534f !important;
      color: #fff !important;
      border: none;
      border-radius: 4px;
      padding: 2px 10px;
      font-size: 0.95rem;
      transition: background 0.2s, color 0.2s;
      margin-left: 8px;
    }

    .delete-contact-btn:hover,
    .delete-contact-btn:focus {
      background-color: #b52a25 !important;
      color: #fff !important;
      outline: none;
    }

    .send-contact-btn {
      background-color: #5cb85c !important;
      color: #fff !important;
      border: none;
      border-radius: 4px;
      padding: 2px 10px;
      font-size: 0.95rem;
      transition: background 0.2s, color 0.2s;
      margin-left: 8px;
      cursor: pointer;
    }

    .send-contact-btn:hover,
    .send-contact-btn:focus {
      background-color: #388e3c !important;
      color: #fff !important;
      outline: none;
    }
  </style>
</head>

<body>
  <nav>
    <div class="logo-name">
      <div class="logo-image">
        <img src="../images/Empower Her (1).png" alt="" width="60" height="55" />
      </div>
      <span class="logo_name">All Contacts</span>
    </div>
    <div class="menu-items">
      <ul class="nav-links">
        <li>
          <a href="/home">
            <i class="uil uil-estate"></i>
            <span class="link-name">Home</span>
          </a>
        </li>
        <li>
          <a href="/addcontact">
            <i class="uil uil-files-landscapes"></i>
            <span class="link-name">Add Contact</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class="uil uil-chart"></i>
            <span class="link-name">Services</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class="uil uil-thumbs-up"></i>
            <span class="link-name">Education</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class="uil uil-comments"></i>
            <span class="link-name">Help</span>
          </a>
        </li>
      </ul>

      <ul class="logout-mode">
        <li>
          <a href="/logout">
            <i class="uil uil-signout"></i>
            <span class="link-name">Logout</span>
          </a>
        </li>
        <li class="mode">
          <a href="#">
            <i class="uil uil-moon"></i>
            <span class="link-name">Dark Mode</span>
          </a>
          <div class="mode-toggle">
            <span class="switch"></span>
          </div>
        </li>
      </ul>
    </div>
  </nav>
  <section class="dashboard">
    <div class="top">
      <i class="uil uil-bars sidebar-toggle"></i>
      <div class="search-box">
        <i class="uil uil-search"></i>
        <form action="/searchContactList" method="GET">
          <input type="text" name="search" placeholder="Search here..." />
        </form>
      </div>

      <!--<img src="images/profile.jpg" alt="">-->
    </div>
    <div class="dash-content">
      <div class="overview">
        <div class="title">
          <img src="../images/teamwork.png" alt="" width="40" height="40" />
          <span class="text">Contact List</span>
        </div>
        <div class="boxes">
          <div class="box box1">
            <img src="../images/contacts.png" alt="" width="40" height="40" />
            <span class="text">Total Contacts</span>
            <span class="number">
              <%= userr.contact.length%>
            </span>
          </div>
          <div class="box box2">
            <img src="../images/call.png" alt="" width="50" height="50" />
            <span class="text">New Contact</span>
            <span class="number">
              <%= userr.contact.length%>
            </span>
          </div>
          <div class="box box3">
            <img src="../images/delete.png" alt="" width="50" height="50" />
            <span class="text">Recent Delete Contact</span>
            <span class="number">0</span>
          </div>
        </div>
      </div>
      <div class="activity">
        <div class="title">
          <i class="uil uil-clock-three"></i>
          <span class="text">Your All Contacts</span>
        </div>

        <div class="activity-data">
          <div class="data names">
            <span class="data-title">Name</span>
            <% userr.contact.forEach(function(e, index) { %>
              <span class="data-list">
                <%= e.usercontact %>
              </span>
              <% }) %>
          </div>

          <div class="data joined">
            <span class="data-title">Phone Numbers</span>
            <% userr.contact.forEach(function(e, index) { %>
              <span class="data-list">
                <%= e.email %>

                  <button id="phone_<%= index %>" class="btn btn-success btn-sm send-contact-btn"
                    data-email="<%= e.email %>">
                    <i class="fas fa-paper-plane"></i> Send
                  </button>

                  <form class="forr" action="/delete-contact/<%= e._id %>" method="get" style="display: inline;"
                    onsubmit="return confirm('Are you sure you want to delete this contact?');">
                    <button type="submit" class="btn btn-danger btn-sm delete-contact-btn">
                      <i class="fas fa-trash-alt"></i> Delete
                    </button>
                  </form>
              </span>
              <% }) %>
          </div>
        </div>
      </div>
    </div>
    </div>
  </section>

  <script src="/javascripts/list.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.8.4/axios.min.js"
    integrity="sha512-2A1+/TAny5loNGk3RBbk11FwoKXYOMfAK6R7r4CpQH7Luz4pezqEGcfphoNzB7SM4dixUoJsKkBsB6kg+dNE2g=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <script>
  <% userr.contact.forEach(function (e, index) { %>
    document.getElementById('phone_<%= index %>').addEventListener("click", async function () {
      data = "<%= e.email %>";
      console.log('====================================');
      console.log(data);
      console.log('====================================');

      if (data) {
        let confirmm = window.confirm("Click ok to send your location to this number");

        if (confirmm) {
          try {
            window.location.href = "https://realtime-tracker-5.onrender.com";
            console.log("Sending data to the server...");


            const response = await axios.post('/submitPhoneNumbers', { email: data });


            console.log('Full response:', response);
            console.log('Response Status:', response.status);
            console.log('Response Data:', response.data);


            if (response.status === 200) {
              console.log("Request was successful");


              window.location.href = "https://realtime-tracker-5.onrender.com";
            } else {
              console.error("Server responded with status:", response.status);
            }
          } catch (error) {
            console.error('There was an error during the request:', error);
            if (error.response) {

              console.error('Server responded with error:', error.response);
            } else if (error.request) {

              console.error('No response received from the server:', error.request);
            } else {

              console.error('Error setting up the request:', error.message);
            }
          }
        }
      }
    });
  <% }) %>
  </script>




</body>

</html>